@model ValueTuple<List<Sigma.Models.Project>, Sigma.Models.User, List<string>>
@{
    Layout = "";
}

<!DOCTYPE html>

<html>
<head>
    <title>Sigma</title>
    <link rel="stylesheet" href="~/Content/css/edit_user_page.css">
    <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
    <meta charset="utf-8">
</head>
<body>
    <div class="header">
        <div class="header__row">
            <div class="header__title">
                <a href="@Url.Action("Index","Home",new {page = 1})">
                    <div class="header__logo">
                        <span>σ</span>
                    </div>
                </a>
                <a href="@Url.Action("Index","Home",new {page = 1})">
                    <div class="header__info">
                        <div class="header__name">Sigma</div>
                        <div class="header__tagname">Where your portfolio starts</div>
                    </div>
                </a>
            </div>
            <div class="header__links">
                <a href="@Url.Action("MyPortfolio", "Home")" class="my_portfolio">My portfolio</a>
                <a href="@Url.Action("AboutPage","Home")" class="about">About</a>
            </div>
        </div>
    </div>
    <form asp-controller="Home" asp-action="EditUserPage" method="post">
        <div class="container">
            <div class="user_info__row">
                <div class="user_title">
                    <div class="input_image__row">
                        <div class="user_image">
                            <input type="file" name="UserAvatarUrl" class="image_input">
                            <img class="image" src="@Model.Item2.avatarUrl" alt="">
                        </div>
                    </div>
                    <div class="user_info">
                        <input value="@Model.Item2.Name" name="UserName" type="text" class="user_name">
                        <input type="text" value="@Model.Item2.position" name="User_position" class="user_position">
                    </div>
                </div>
                <div class="user_links">
                    <div>
                        <div class="user_link_border">
                            <image class="user_link_image" src="img/links_icons/LinkedinLogo.png" alt=""></image>
                            <div class="trash_border">
                                <image class="trash_link" src="img/links_icons/Trash.png"></image>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="user_link_border">
                            <image class="user_link_image" src="img/links_icons/MediumLogo.png" alt=""></image>
                            <div class="trash_border">
                                <image class="trash_link" src="img/links_icons/Trash.png"></image>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="user_link_border">
                            <image class="user_link_image" src="img/links_icons/GithubLogo.png" alt=""></image>
                            <div class="trash_border">
                                <image class="trash_link" src="img/links_icons/Trash.png"></image>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="user_link_border">
                            <image class="user_link_image" src="img/links_icons/FacebookLogo.png" alt=""></image>
                            <div class="trash_border">
                                <image class="trash_link" src="img/links_icons/Trash.png"></image>
                            </div>
                        </div>
                    </div>
                    <div class="add_new_link__row">
                        <div class="add_new_link_text">Add new...</div>
                        <image class="add_new_link_image" src="img/links_icons/Plus.png"></image>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="owner_info__row">
                <div class="row__title">Tell a bit about yourself</div>
                <div class="row__type">
                    <div class="row__editor">Editor</div>
                    <div class="row__preview">Preview</div>
                </div>
                <div class="markdown__row">
                    <input type="text" class="markdown__title" name="UserAboutTitle" value="@Model.Item2.about_title"/>
                    <textarea class="markdown__text" name="UserAboutText">@Model.Item2.about_text</textarea>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="search__project_text">Select your brightest projects</div>
                <div class="project__search">
                    <input class="project_selection__text" value="@ViewData["project_order"]" placeholder="Search for a project">
                    <image class="magglass" src="img/icons/magnifying-glass.png"></image>
                </div>
            <div class="projects__row">
                @foreach (var project in Model.Item1)
                {
                <div class="project__item">
                    <img class="item__image" src="@project.PhotoUrl" alt="">
                    <div class="item__name">@project.Title</div>
                </div>
                }
            </div>
        </div>
        <div class="container">
            <div class="all_projects">
                <button type="submit">
                    Save changes
                </button>
            </div>
        </div>
    </form>
    <div class="footer">
        Sigma 2021
    </div>
</body>
</html>