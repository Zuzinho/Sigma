@model      string[]
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Code confirmation</title>
    <link rel="stylesheet" href="~/Content/css/code_confirmation.css">
    <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto">
    <meta charset="utf-8">
</head>
<body>
    <div class="header">
        <div class="header__row">
            <div class="header__title">
                <a href="@Url.Action("Index","Home")">
                    <div class="header__logo">
                        <span>σ</span>
                    </div>
                </a>
                <a href="@Url.Action("Index","Home")">
                    <div class="header__info">
                        <div class="header__name">Sigma</div>
                        <div class="header__tagname">Where your portfolio starts</div>
                    </div>
                </a>
            </div>
            <div class="header__links">
                <a href="@Url.Action("MyPortfolio", "Home")" class="my_portfolio">My portfolio</a>
                <a href="@Url.Action("AboutPage","Home")" class="about">About</a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="sign_in">
            <h1>We have sent passcode to  <span class="email">@Model[0]</span></h1>
            <div class="code_disc">Check your email and past here the code you got. <a class="ref_back" href="@Url.Action("SignUp","Home")">Change email adress</a>.</div>
            <div class="error">@Model[1]</div>
            <form method="post" id="SendCodeForm">
                <input type="text" class="password" name="code" placeholder="Write code here" required>
                <button type="submit" id="btn1" class="button">Continue</button>
            </form>
        </div>
    </div>
    <div class="footer">
        Sigma 2022
    </div>
</body>
</html>