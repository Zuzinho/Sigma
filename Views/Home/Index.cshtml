@model ValueTuple<List<Sigma.Models.Project>,List<Sigma.Models.User>>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Sigma</title>
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
    <meta charset="utf-8">
</head>
<body>
    <div class="header">
        <div class="header__row">
            <div class="header__title">
                <a href="@Url.Action("Index","Home")">
                    <div class="header__logo">
                        <span>σ</span>
                    </div>
                </a>
                <a href="@Url.Action("Index","Home")">
                    <div class="header__info">
                        <div class="header__name">Sigma</div>
                        <div class="header__tagname">Where your portfolio starts</div>
                    </div>
                </a>
            </div>
            <div class="header__links">
                <a href="@Url.Action("MyPortfolio", "Home")" class="my_portfolio">My portfolio</a>
                <a href="@Url.Action("AboutPage","Home")" class="about">About</a>
            </div>
        </div>
    </div>
    <div class="find_console_block">
        <div class="find_console">
            <p class="find">
                Find specialists
            </p>
            <form action="#">
                <input type="search" placeholder="Search for skills or projects">
                <button type="submit" class="search">Search</button>
            </form>
        </div>
    </div>
    <div class="portfolios">
        <!---nik.zozulya.04@mail.ru 0x3y0x2y0x4y-->
        <div class="portfolios_title">Last Portfolios</div>
        <div class="portfolios__row">
            @foreach (var user in Model.Item2)
            {
                int count = 0;

                <a class="user_page" href="@Url.Action("UserPage","Home",new {item_id = user.Id})">
                    <div class="portfolios__item item">
                        <div class="item__row">
                            <div class="item__title">
                                <img src="@user.avatarUrl" alt="" class="title__image">
                                <div class="item__info">
                                    <p class="title_name">@user.Name</p>
                                    <p class="title_main_skill">@user.position</p>
                                </div>
                                <div class="item__skills">
                                    @foreach (var project in Model.Item1)
                                    {
                                        if (project.user_id == user.Id)
                                        {
                                            <div class="item__skill skill">
                                                <div class="skill__info">@project.Title</div>
                                                <div class="skill__name"><p>@project.technology</p></div>
                                            </div>
                                            count++;
                                            if (count == 3)
                                            {
                                                break;
                                            }
                                        }

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
    <div class="footer">
        Sigma 2021
    </div>
</body>
</html>
